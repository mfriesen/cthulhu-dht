<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
"-//Puppy Crawl//DTD Import Control 1.0//EN"
"http://www.puppycrawl.com/dtds/import_control_1_0.dtd">

<import-control pkg="ca.gobits">

    <!--  ca.gobits.dht -->
    <subpackage name="dht">
	    <allow pkg="ca.gobits.dht" />
	    
	    <allow pkg="com.google.common" />
	    
	    <allow pkg="java.io" />
	    <allow pkg="java.math" />
	    <allow pkg="java.net" />
	    <allow pkg="java.security" />
	    <allow pkg="java.util" />
	    
	    <allow pkg="org.apache.commons.lang3" />
	    <allow pkg="org.apache.log4j" />
	        
	    <allow pkg="org.springframework.security.crypto.keygen" />
	    
	    <!-- ca.gobits.dht.server -->
	    <subpackage name="server">
	        <allow pkg="org.apache.commons.cli" />
	        <allow pkg="org.apache.commons.codec" />
	        <allow pkg="org.springframework.beans" />
	        <allow pkg="org.springframework.context" />
	        <allow pkg="org.springframework.scheduling" />
	        <allow pkg="org.springframework.util" />
	        
	        <!-- ca.gobits.dht.server.integration.test -->
	        <subpackage name="integration.test">
	            <allow pkg="org.springframework.test" />
	        </subpackage>
	    
	    </subpackage>
    </subpackage>
    
    <!--  ca.gobits.test.dht -->
    <subpackage name="test.dht">
        <allow pkg="ca.gobits.dht" />
        <allow pkg="java.math" />
        <allow pkg="java.net" />
        <allow pkg="java.util" />
        <allow pkg="org.junit" />
    </subpackage>
    
</import-control>