<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
"-//Puppy Crawl//DTD Import Control 1.0//EN"
"http://www.puppycrawl.com/dtds/import_control_1_0.dtd">

<import-control pkg="ca.gobits.test">


    <allow pkg="java.lang.reflect" />
    <allow pkg="java.math" />
    <allow pkg="java.net" />
    <allow pkg="java.util" />
    
    <allow pkg="org.apache.commons.codec" />
    <allow pkg="org.apache.log4j" />
    
    <allow pkg="org.easymock" />
    
    <allow pkg="org.junit" />
    
    <allow pkg="edu.umd.cs.findbugs.annotations" />
    
    <!-- ca.gobits.test.dht -->
    <subpackage name="dht">
        
        <allow pkg="ca.gobits.dht" />
        
        <!-- ca.gobits.test.dht.bencoding -->
        <subpackage name="bencoding">
            <allow pkg="ca.gobits.dht.bencoding" />
        </subpackage>

        <!-- ca.gobits.test.dht.integration -->
        <subpackage name="integration">
            <allow pkg="ca.gobits.test.dht" />
            <allow pkg="java.io" />
            <allow pkg="org.apache.commons.codec" />
            <allow pkg="org.apache.log4j" />
            
            <allow pkg="org.springframework.beans" />
            <allow pkg="org.springframework.context" />
            <allow pkg="org.springframework.scheduling" />
            <allow pkg="org.springframework.test" />
            
        </subpackage>
        
        <!-- ca.gobits.test.dht.server -->
        <subpackage name="server">
        
            <allow pkg="ca.gobits.test.dht" />
            
            <allow pkg="java.io" />
            
            <allow pkg="org.apache.commons.cli" />
            
            <allow pkg="org.powermock" />
            
            <allow pkg="org.springframework.context" />
            <allow pkg="org.springframework.scheduling" />
            <allow pkg="org.springframework.test" />
            
        </subpackage>

        <!-- ca.gobits.test.dht.util -->
        <subpackage name="util">
            <allow pkg="com.google.common" />
        </subpackage>
        
    </subpackage>
    
</import-control>